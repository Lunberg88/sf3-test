{% extends 'base.html.twig' %}

{% block body %}
    <h1>Emp</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emp.id }}</td>
            </tr>
            <tr>
                <th>Fio</th>
                <td>{{ emp.fio }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ emp.position }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ emp.salary }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if emp.date %}{{ emp.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

            <a class="btn btn-default" href="{{ path('emp_index') }}">Back to the list</a>
            <a class="btn btn-warning" href="{{ path('emp_edit', { 'id': emp.id }) }}">Edit</a>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
    <br><br>
{% endblock %}
