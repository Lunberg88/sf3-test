{% extends 'base.html.twig' %}
    {% block body %}
        {% if find %}
            <h1>Emps list</h1>
            <table class="table table-striped">
            <thead>
            <tr>
                <th>id</th>
                <th>fio</th>
                <th>position</th>
                <th>salary</th>
                <th>date</th>
                <th>position name</th>
            </tr>
            </thead>
            {% for res in find %}
                    <tbody id="res">
                    {# table body #}
                        <tr {% if loop.index is odd %}class="color"{% endif %}>
                            <td>{{ res.id }}</td>
                            <td>{{ res.fio }}</td>
                            <td>{{ res.positionId }}</td>
                            <td>{{ res.salary }}</td>
                            <td>{{ res.date | date('Y-m-d') }}</td>
                            <td>{{ res.name }}</td>
                        </tr>
            {% endfor %}
                    </tbody>
            </table>
            {% else %}
            No matches found...
        {% endif %}
    {% endblock %}